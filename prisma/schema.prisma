generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
}

model Team {
  id            Int      @id @default(autoincrement())
  teamName      String   @unique
  password      String
  isBinusian    Boolean
  role          Role     @default(USER) // Buat Role
  leader        Leader?
  createdAt     DateTime @default(now())
}

model Leader {
  id             Int      @id @default(autoincrement())
  fullName       String
  email          String   @unique
  whatsappNumber String   @unique
  lineId         String   @unique
  githubId       String
  birthPlace     String
  birthDate      DateTime
  cvUrl          String   // Path CV 
  idCardUrl      String   // Path Flazz/KTP
  teamId         Int      @unique
  team           Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Admin {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  isBinusian Boolean
  createdAt  DateTime @default(now())
}
